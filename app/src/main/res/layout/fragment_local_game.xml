<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.local.LocalGameFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                layout="@layout/layout_menu_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tVPlayerCountLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/tv_players" />

                <TextView
                    android:id="@+id/tVCountLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tVImpostersLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_imposters" />

                <Button
                    android:id="@+id/bttnPlusImposterLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="+" />

                <TextView
                    android:id="@+id/tVImposterCountLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="1" />

                <Button
                    android:id="@+id/bttnMinusImposterLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="-" />
            </LinearLayout>

            <View
                android:id="@+id/board5"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/board" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>