<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_weight="0"
            android:gravity="top|left"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imVAvatarChat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|left"
                android:layout_weight="0"
                android:foregroundGravity="left"
                app:srcCompat="@drawable/ic_test_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tVNamePlayerChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tVMassegeChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_weight="0"
                android:padding="4dp"
                android:text="sdfsdf\nksdfkdfs\nsdlkfsdkf\nsdkjfksjdf\nkjdsfkjdsf\nfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>